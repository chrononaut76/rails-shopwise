<%= stylesheet_link_tag 'pages/login_styles', media: 'all', 'data-turbolinks-track': 'reload' %>

<div class="background-container-login">
  <div class="container-login">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    placeholder: "Username",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    placeholder: "Password",
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log In", class: "login-button-signin" %>
      </div>
    <% end %>

    <div class="or-text">or</div> <!-- New div for "or" text -->
      <%= link_to "Sign up", new_registration_path(resource_name), class: "sign-up-btn-login" %><br />
  </div>
</div>
