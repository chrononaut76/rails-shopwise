<div data-controller='search-items'>
  <%= simple_form_for my_items_path, data: { search_items_target: 'form'} do |f| %>
    <%= f.input :name, value: params[:name], input_html: { data: { search_items_target: 'input', action: 'keyup->search-items#results' } } %>
      <div data-search-items-target='results'>
        <% unless params[:query].blank? %>
          <ul class='list-group'>
            <% @items.each do |item| %>
              <li class='list-group-item'>
                <%= item.name %>
                <%= link_to 'Add item', item, data: { turbo_method: :post } %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
  <% end %>
</div>
